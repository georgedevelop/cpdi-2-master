
<main class="form-signin">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <img alt="CPDI" src="/assets/logo.png" class="img-fluid">
    <br/>
    <br/>
    <h1 class="h3 mb-3 fw-normal text-center">Sign Up</h1>
    <label for="inputEmail" class="visually-hidden">Email address</label>
    <%= f.email_field :email, placeholder: "Email address", class: "form-control" %>
    <label for="inputPassword" class="visually-hidden">Password (6 characters minimum)</label>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
    <label for="inputPassword" class="visually-hidden">Password Confirmation</label>
    <%= f.password_field :password_confirmation, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    <%= f.submit "Sign up", class: "w-100 btn btn-lg btn-primary" %>
    <div class="row">
      <div class="col-md-12 mt-5">
        Already have an account? <%= render "devise/shared/links" %>
      </div>
    </div>
      
    <p class="mt-5 mb-3 text-muted">Â© CPDI 2021</p>
  <% end %>

</main>



