<div class="row">
  <div class="col-md-6">
    <%= form_with(model: vendor) do |form| %>
      <% if vendor.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(vendor.errors.count, "error") %> prohibited this vendor from being saved:</h2>

          <ul>
            <% vendor.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", data: {behavior: "autocomplete-vendors"} %>
      </div>

      <div class="form-group">
        <%= form.label :contact_person %>
        <%= form.text_field :contact_person, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :address %>
        <%= form.text_field :address, class: "form-control" %>
      </div>

      <div class="actions">
        <%= form.submit "Submit", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

